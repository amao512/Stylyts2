<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/item_shop_order_root_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <TextView
        android:id="@+id/item_shop_order_number_text_view"
        style="@style/TextRegular"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_size_16x"
        android:layout_marginTop="@dimen/margin_size_16x"
        android:textSize="@dimen/text_size_14x"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Заказ №043553 - "
        />

    <TextView
        android:id="@+id/item_shop_price_text_view"
        style="@style/TextRegularBold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/text_size_14x"
        app:layout_constraintStart_toEndOf="@id/item_shop_order_number_text_view"
        app:layout_constraintTop_toTopOf="@id/item_shop_order_number_text_view"
        tools:text="15 000 KZT."
        />

    <TextView
        android:id="@+id/item_shop_order_date_text_view"
        style="@style/TextRegular"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_size_6x"
        android:textColor="@color/app_dark_blue_gray_half"
        android:textSize="@dimen/text_size_14x"
        app:layout_constraintStart_toStartOf="@id/item_shop_order_number_text_view"
        app:layout_constraintTop_toBottomOf="@id/item_shop_order_number_text_view"
        tools:text="20/06/21"
        />

    <TextView
        android:id="@+id/item_shop_order_new_order_text_view"
        style="@style/TextRegular"
        android:layout_width="110dp"
        android:layout_height="@dimen/user_subs_button_height"
        android:layout_marginStart="@dimen/margin_size_4x"
        android:layout_marginEnd="@dimen/margin_size_16x"
        android:background="@drawable/rounded_rectangle_white_gray_corners"
        android:backgroundTint="@color/app_light_orange"
        android:gravity="center"
        android:text="@string/new_order"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_14x"
        app:layout_constraintBottom_toBottomOf="@id/item_shop_order_date_text_view"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/item_shop_order_number_text_view"
        />

    <TextView
        android:id="@+id/item_shop_order_delivered_text_view"
        style="@style/TextRegular"
        android:layout_width="110dp"
        android:layout_height="@dimen/user_subs_button_height"
        android:layout_marginStart="@dimen/margin_size_4x"
        android:layout_marginEnd="@dimen/margin_size_16x"
        android:background="@drawable/rounded_rectangle_white_gray_corners"
        android:backgroundTint="@color/app_green"
        android:gravity="center"
        android:text="@string/order_delivered"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_14x"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@id/item_shop_order_date_text_view"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/item_shop_order_number_text_view"
        />

    <TextView
        android:id="@+id/item_shop_order_complete_order_text_view"
        style="@style/TextRegular"
        android:layout_width="110dp"
        android:layout_height="@dimen/user_subs_button_height"
        android:layout_marginStart="@dimen/margin_size_4x"
        android:layout_marginEnd="@dimen/margin_size_16x"
        android:background="@drawable/rounded_rectangle_white_gray_corners"
        android:backgroundTint="@color/app_dark_blue_gray"
        android:gravity="center"
        android:text="@string/complete_order"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_14x"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@id/item_shop_order_date_text_view"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/item_shop_order_number_text_view"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/little_divider_height"
        android:layout_marginStart="@dimen/margin_size_16x"
        android:layout_marginTop="@dimen/margin_size_6x"
        android:background="@color/app_dark_blue_gray_half"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@id/item_shop_order_number_text_view"
        app:layout_constraintTop_toBottomOf="@id/item_shop_order_date_text_view"
        />
</androidx.constraintlayout.widget.ConstraintLayout>