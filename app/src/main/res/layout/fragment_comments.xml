<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.fragments.collection.CommentsFragment"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <include
            android:id="@+id/fragment_comments_toolbar"
            layout="@layout/base_toolbar"
            />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/fragment_comments_recycler_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            tools:listitem="@layout/item_comment"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="@color/white"
        android:orientation="horizontal"
        android:paddingHorizontal="@dimen/padding_size_16x"
        android:paddingVertical="@dimen/padding_size_6x"
        >

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            >

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/fragment_comments_avatar_shapeable_image_view"
                android:layout_width="@dimen/small_image_size"
                android:layout_height="@dimen/small_image_size"
                android:layout_gravity="center"
                android:adjustViewBounds="true"
                app:shapeAppearanceOverlay="@style/circleImageView"
                tools:src="@drawable/jacket"
                />

            <TextView
                android:id="@+id/fragment_comments_user_short_name_text_view"
                style="@style/TextRegular"
                android:layout_width="@dimen/small_image_size"
                android:layout_height="@dimen/small_image_size"
                android:layout_gravity="center"
                android:background="@drawable/circle_gray"
                android:gravity="center"
                tools:text="RE"
                />
        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginStart="@dimen/margin_size_10x"
            android:background="@drawable/bg_comment_edit_text"
            android:orientation="horizontal"
            >

            <EditText
                android:id="@+id/fragment_comments_edit_text"
                style="@style/TextRegular"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@null"
                android:gravity="center_vertical"
                android:hint="@string/comments_add"
                android:imeOptions="actionDone"
                android:paddingVertical="@dimen/padding_size_6x"
                android:paddingStart="@dimen/padding_size_10x"
                android:paddingEnd="@dimen/padding_size_6x"
                />

            <TextView
                android:id="@+id/fragment_comments_send_text_view"
                style="@style/TextRegularBold"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:paddingHorizontal="@dimen/padding_size_16x"
                android:text="@string/send"
                android:textColor="@color/app_blue_half"
                />
        </LinearLayout>

    </LinearLayout>

    <include
        android:id="@+id/fragment_comments_progress_bar"
        layout="@layout/base_progress"
        android:visibility="gone"
        />

</FrameLayout>