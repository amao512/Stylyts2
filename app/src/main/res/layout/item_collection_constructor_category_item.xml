<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginStart="8dp"
    android:layout_marginEnd="8dp"
    android:orientation="vertical">

    <TextView
        android:id="@+id/text_view_item_collection_constructor_category_item_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <FrameLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="8dp"
        app:layout_constraintWidth_min="90dp"
        android:background="@drawable/rounded_rectangle_gray"
        android:padding="6dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/text_view_item_collection_constructor_category_item_title"
        app:layout_constraintStart_toStartOf="@+id/text_view_item_collection_constructor_category_item_title"
        app:layout_constraintTop_toBottomOf="@+id/text_view_item_collection_constructor_category_item_title">

        <ImageView
            android:id="@+id/image_view_item_collection_constructor_category_item_image_holder"
            android:layout_width="70dp"
            android:layout_height="90dp"
            android:layout_gravity="center"
            android:scaleType="fitCenter"
            tools:src="@drawable/ic_baseline_add_circle_outline_24" />

        <ImageView
            android:id="@+id/image_view_item_collection_constructor_category_item_image_chooser"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="top|end"
            android:background="@drawable/circle_light_orange"
            android:src="@drawable/ic_baseline_check_24"
            android:visibility="gone" />
    </FrameLayout>
</androidx.constraintlayout.widget.ConstraintLayout>