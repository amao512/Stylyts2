<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    >

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <com.google.android.material.appbar.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:elevation="0dp"
            >

            <com.google.android.material.appbar.CollapsingToolbarLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                app:layout_scrollFlags="scroll|enterAlways"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_collapseMode="parallax"
                    >

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        >

                        <include
                            android:id="@+id/fragment_search_toolbar"
                            layout="@layout/base_toolbar"
                            />
                    </FrameLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/margin_size_16x"
                        android:layout_marginTop="@dimen/margin_size_10x"
                        android:orientation="horizontal"
                        android:weightSum="1"
                        >

                        <androidx.appcompat.widget.SearchView
                            android:id="@+id/fragment_search_search_view"
                            android:layout_width="0dp"
                            android:layout_height="@dimen/search_view_height"
                            android:layout_weight="0.85"
                            android:focusedByDefault="true"
                            android:inputType="text"
                            android:theme="@style/SearchView"
                            app:queryBackground="@android:color/transparent"
                            app:queryHint="Поиск"
                            app:searchIcon="@drawable/ic_search"
                            />

                        <TextView
                            android:id="@+id/fragment_search_cancel_text_view"
                            style="@style/TextRegular"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginStart="@dimen/margin_size_16x"
                            android:layout_weight="0.15"
                            android:gravity="center"
                            android:text="@string/cancel"
                            android:textColor="@color/app_light_orange"
                            />
                    </LinearLayout>

                </LinearLayout>

            </com.google.android.material.appbar.CollapsingToolbarLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                >

                <com.google.android.material.tabs.TabLayout
                    android:id="@+id/fragment_search_tab_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:tabIndicatorColor="@color/app_black"
                    app:tabMinWidth="@dimen/search_tab_min_width"
                    app:tabSelectedTextColor="@color/app_black"
                    app:tabTextAppearance="@style/TextRegularBold"
                    />
            </FrameLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/little_divider_height"
                android:layout_gravity="bottom"
                android:background="@color/toolbar_border"
                />
        </com.google.android.material.appbar.AppBarLayout>

        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/fragment_search_view_pager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"
            />
    </androidx.coordinatorlayout.widget.CoordinatorLayout>

</LinearLayout>