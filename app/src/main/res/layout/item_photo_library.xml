<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/photo_library_width"
    android:layout_height="wrap_content"
    >

    <ImageView
        android:id="@+id/image_view_photo_library"
        android:layout_width="match_parent"
        android:layout_height="@dimen/photo_library_width"
        android:scaleType="centerCrop"
        />

    <FrameLayout
        android:id="@+id/frame_layout_item_photo_library"
        android:layout_width="@dimen/photo_library_check_container_size"
        android:layout_height="@dimen/photo_library_check_container_size"
        android:layout_gravity="top|end"
        android:layout_margin="@dimen/margin_size_8x"
        android:background="@drawable/circle_checked"
        android:visibility="gone"
        >

        <ImageView
            android:layout_width="@dimen/photo_library_check_icon_size"
            android:layout_height="@dimen/photo_library_check_icon_size"
            android:layout_gravity="center"
            android:src="@drawable/ic_baseline_check_24"
            />
    </FrameLayout>

</FrameLayout>