<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <TextView
        android:id="@+id/item_income_date_text_view"
        style="@style/SubtitleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Декабрь 24 - Декабрь 30"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:padding="@dimen/padding_size_16x"
        />

    <TextView
        style="@style/SubtitleText"
        android:padding="@dimen/padding_size_16x"
        android:id="@+id/item_income_price_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/item_income_divider_view"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="10 000 KZT"
        />

    <View
        android:id="@+id/item_income_divider_view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/small_divider_height"
        android:background="@color/divider_bg_color"
        android:layout_marginStart="@dimen/margin_size_16x"
        app:layout_constraintTop_toBottomOf="@id/item_income_date_text_view"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />
</androidx.constraintlayout.widget.ConstraintLayout>