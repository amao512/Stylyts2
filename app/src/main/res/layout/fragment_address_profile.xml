<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_very_light_gray"
    android:orientation="vertical"
    tools:context=".presentation.fragments.main.profile.AddressProfileFragment"
    >

    <include
        android:id="@+id/include_toolbar_addresses"
        layout="@layout/base_toolbar"
        />

    <include
        android:id="@+id/base_progress_address_profile"
        layout="@layout/base_progress_small"
        />

    <LinearLayout
        android:id="@+id/linear_layout_fragment_address_profile_addresses"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <TextView
            android:id="@+id/text_view_fragment_address_profile_empty"
            style="@style/TextRegular"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="@dimen/margin_size_24x"
            android:text="У вас отсутствуют адрес доставки. Добавьте адрес."
            android:visibility="gone"
            />

        <LinearLayout
            android:id="@+id/linear_layout_fragment_address_profile_add_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            >

            <TextView
                style="@style/TextRegular"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_size_24x"
                android:background="@drawable/rounded_rectangle_white_gray_corners"
                android:gravity="center"
                android:padding="@dimen/padding_size_16x"
                android:text="Добавить адрес"
                android:textAllCaps="false"
                />
        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_view_fragment_address_profile"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:listitem="@layout/item_address_profile"
            />
    </LinearLayout>

    <ScrollView
        android:id="@+id/scroll_view_fragment_address_profile"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <TextView
                style="@style/TextRegularBold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/app_very_light_gray"
                android:padding="@dimen/padding_size_16x"
                android:text="Контактная информация"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical"
                android:paddingStart="@dimen/padding_size_16x"
                >

                <TextView
                    style="@style/TextRegularBold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_size_16x"
                    android:text="Контактная информация"
                    android:textColor="@color/app_gray_hint"
                    />

                <EditText
                    android:id="@+id/edit_Text_fragment_address_profile_name"
                    style="@style/TextRegular"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_size_8x"
                    android:background="@null"
                    android:imeOptions="actionNext"
                    android:inputType="text|textPersonName"
                    android:text="Руслан"
                    />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginTop="@dimen/margin_size_8x"
                    android:background="@color/app_gray_hint"
                    />

                <TextView
                    style="@style/TextRegularBold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_size_16x"
                    android:text="Фамилия"
                    android:textColor="@color/app_gray_hint"
                    />

                <EditText
                    android:id="@+id/edit_Text_fragment_address_profile_surname"
                    style="@style/TextRegular"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_size_8x"
                    android:background="@null"
                    android:imeOptions="actionNext"
                    android:inputType="text|textPersonName"
                    android:text="Руслан"
                    />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginTop="@dimen/margin_size_8x"
                    android:background="@color/app_gray_hint"
                    />

                <TextView
                    style="@style/TextRegularBold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_size_16x"
                    android:text="Мобильный телефон"
                    android:textColor="@color/app_gray_hint"
                    />

                <EditText
                    android:id="@+id/edit_Text_fragment_address_profile_phone"
                    style="@style/TextRegular"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_size_8x"
                    android:background="@null"
                    android:imeOptions="actionNext"
                    android:inputType="phone"
                    android:text="+70000000"
                    />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginTop="@dimen/margin_size_8x"
                    android:background="@color/app_gray_hint"
                    />

                <TextView
                    style="@style/TextRegularBold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_size_16x"
                    android:text="Контактная информация"
                    android:textColor="@color/app_gray_hint"
                    />

                <EditText
                    android:id="@+id/edit_Text_fragment_address_profile_contact"
                    style="@style/TextRegular"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_size_8x"
                    android:layout_marginBottom="@dimen/margin_size_16x"
                    android:background="@null"
                    android:imeOptions="actionNext"
                    android:inputType="text"
                    android:text="Руслан"
                    />
            </LinearLayout>

            <TextView
                style="@style/TextRegularBold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_size_16x"
                android:background="@color/app_very_light_gray"
                android:padding="16dp"
                android:text="Адресные данные"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical"
                android:paddingStart="@dimen/padding_size_16x"
                >

                <TextView
                    style="@style/TextRegularBold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_size_16x"
                    android:text="Страна"
                    android:textColor="@color/app_gray_hint"
                    />

                <EditText
                    android:id="@+id/edit_Text_fragment_address_profile_country"
                    style="@style/TextRegular"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_size_8x"
                    android:background="@null"
                    android:imeOptions="actionNext"
                    android:inputType="text"
                    />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginTop="@dimen/margin_size_8x"
                    android:background="@color/app_gray_hint"
                    />

                <TextView
                    style="@style/TextRegularBold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_size_16x"
                    android:text="Адресс"
                    android:textColor="@color/app_gray_hint"
                    />

                <EditText
                    android:id="@+id/edit_Text_fragment_address_profile_address"
                    style="@style/TextRegular"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_size_8x"
                    android:background="@null"
                    android:imeOptions="actionNext"
                    android:inputType="text"
                    />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginTop="@dimen/margin_size_8x"
                    android:background="@color/app_gray_hint"
                    />

                <TextView
                    style="@style/TextRegularBold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_size_16x"
                    android:text="Населенный пункт"
                    android:textColor="@color/app_gray_hint"
                    />

                <EditText
                    android:id="@+id/edit_Text_fragment_address_profile_point"
                    style="@style/TextRegular"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_size_8x"
                    android:background="@null"
                    android:imeOptions="actionNext"
                    android:inputType="text"
                    />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginTop="@dimen/margin_size_8x"
                    android:background="@color/app_gray_hint"
                    />

                <TextView
                    style="@style/TextRegularBold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_size_16x"
                    android:text="Почтовый индекс"
                    android:textColor="@color/app_gray_hint"
                    />

                <EditText
                    android:id="@+id/edit_Text_fragment_address_profile_post"
                    style="@style/TextRegular"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_size_8x"
                    android:background="@null"
                    android:imeOptions="actionDone"
                    android:inputType="number"
                    />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginTop="@dimen/margin_size_8x"
                    android:background="@color/app_gray_hint"
                    />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linear_layout_fragment_address_profile_create_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                >

                <TextView
                    style="@style/TextRegular"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/margin_size_24x"
                    android:background="@drawable/rounded_rectangle_white_gray_corners"
                    android:gravity="center"
                    android:padding="@dimen/padding_size_16x"
                    android:text="Добавить адрес"
                    android:textAllCaps="false"
                    />
            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>