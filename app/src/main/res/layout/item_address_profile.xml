<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/white"
    android:orientation="vertical"
    android:layout_marginTop="24dp"
    android:id="@+id/linear_layout_address_profile_container"
    android:padding="16dp">
    <FrameLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_gravity="start|center"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/text_view_address_profile_name"
                style="@style/TextRegular"
                tools:text = "Ruslan Taipov"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/text_view_address_profile_surname"
                style="@style/TextRegular"
                tools:text = "Назарбаева 120"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/text_view_address_profile_city"
                style="@style/TextRegular"
                tools:text = "Алмата"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/text_view_address_profile_post_code"
                style="@style/TextRegular"
                tools:text = "00500500"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/text_view_address_profile_country"
                style="@style/TextRegular"
                tools:text = "Казахстан"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/text_view_address_profile_phone"
                style="@style/TextRegular"
                tools:text = "+77014081133"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
    </LinearLayout>
        <ImageView
            android:layout_gravity="end|center"
            android:src="@drawable/ic_baseline_keyboard_arrow_right_24"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </FrameLayout>
    <TextView
        android:layout_marginTop="16dp"
        style="@style/TextRegular"
        android:textColor="@color/app_gray_hint"
        android:text="Предпочтительный адрес доставки"
        android:drawableEnd="@drawable/ic_baseline_check_24_gray"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:layout_marginTop="8dp"
        android:layout_marginBottom="16dp"
        style="@style/TextRegular"
        android:textColor="@color/app_gray_hint"
        android:text="Адрес выставления счетов по умолчанию"
        android:drawableEnd="@drawable/ic_baseline_check_24_gray"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</LinearLayout>