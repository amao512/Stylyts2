<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linear_layout_address_profile_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/margin_size_24x"
    android:background="@color/white"
    android:orientation="vertical"
    android:padding="@dimen/padding_size_16x"
    >

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start|center"
            android:orientation="vertical"
            >

            <TextView
                android:id="@+id/text_view_address_profile_name"
                style="@style/TextRegular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Ruslan Taipov"
                />

            <TextView
                android:id="@+id/text_view_address_profile_surname"
                style="@style/TextRegular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Назарбаева 120"
                />

            <TextView
                android:id="@+id/text_view_address_profile_city"
                style="@style/TextRegular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Алмата"
                />

            <TextView
                android:id="@+id/text_view_address_profile_post_code"
                style="@style/TextRegular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="00500500"
                />

            <TextView
                android:id="@+id/text_view_address_profile_country"
                style="@style/TextRegular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Казахстан"
                />

            <TextView
                android:id="@+id/text_view_address_profile_phone"
                style="@style/TextRegular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="+77014081133"
                />
        </LinearLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end|center"
            android:src="@drawable/ic_baseline_keyboard_arrow_right_24"
            />
    </FrameLayout>

    <TextView
        style="@style/TextRegular"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_size_16x"
        android:drawableEnd="@drawable/ic_baseline_check_24_gray"
        android:text="Предпочтительный адрес доставки"
        android:textColor="@color/app_gray_hint"
        />

    <TextView
        style="@style/TextRegular"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_size_8x"
        android:layout_marginBottom="@dimen/margin_size_16x"
        android:drawableEnd="@drawable/ic_baseline_check_24_gray"
        android:text="Адрес выставления счетов по умолчанию"
        android:textColor="@color/app_gray_hint"
        />
</LinearLayout>