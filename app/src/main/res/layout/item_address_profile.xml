<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linear_layout_address_profile_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/margin_size_24x"
    android:background="@color/white"
    android:orientation="vertical"
    >

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/padding_size_16x"
        >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start|center"
            android:orientation="vertical"
            >

            <TextView
                android:id="@+id/text_view_address_profile_fullname"
                style="@style/TextRegular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                tools:text="Ruslan Taipov"
                />

            <TextView
                android:id="@+id/text_view_address_profile_street"
                style="@style/TextRegular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Назарбаева 120"
                />

            <TextView
                android:id="@+id/text_view_address_profile_city"
                style="@style/TextRegular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Алмата"
                />

            <TextView
                android:id="@+id/text_view_address_profile_post_code"
                style="@style/TextRegular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="00500500"
                />

            <TextView
                android:id="@+id/text_view_address_profile_country"
                style="@style/TextRegular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Казахстан"
                />

            <TextView
                android:id="@+id/text_view_address_profile_phone"
                style="@style/TextRegular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                tools:text="+77014081133"
                />
        </LinearLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end|center"
            android:src="@drawable/ic_baseline_keyboard_arrow_right_24"
            />
    </FrameLayout>

    <TextView
        android:id="@+id/item_address_profile_prefer_text_view"
        style="@style/TextRegular"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/margin_size_16x"
        android:layout_marginTop="@dimen/margin_size_16x"
        android:drawableEnd="@drawable/ic_baseline_check_24_gray"
        android:text="@string/address_profile_prefer_address"
        android:textColor="@color/app_gray_hint"
        android:visibility="gone"
        />

    <TextView
        android:id="@+id/item_address_profile_default_card_text_view"
        style="@style/TextRegular"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/margin_size_16x"
        android:layout_marginTop="@dimen/margin_size_8x"
        android:layout_marginBottom="@dimen/margin_size_16x"
        android:drawableEnd="@drawable/ic_baseline_check_24_gray"
        android:text="@string/address_profile_default_score"
        android:textColor="@color/app_gray_hint"
        android:visibility="gone"
        />

    <View
        android:id="@+id/item_address_divider"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginStart="@dimen/margin_size_16x"
        android:layout_marginTop="@dimen/margin_size_8x"
        android:background="@color/app_gray_hint"
        />

    <TextView
        android:id="@+id/item_address_profile_set_default_delivery_address_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="@dimen/margin_size_16x"
        android:layout_marginStart="@dimen/margin_size_16x"
        android:text="@string/address_profile_set_default"
        android:textColor="@color/app_light_orange"
        android:textStyle="bold"
        />
</LinearLayout>