<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linear_layout_card_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/margin_size_24x"
    android:background="@color/white"
    android:orientation="vertical"
    android:padding="@dimen/padding_size_16x"
    >

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start|center"
            android:orientation="vertical"
            >

            <TextView
                android:id="@+id/text_view_card_profile_card_name"
                style="@style/TextRegular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Debit Master Card"
                />

            <TextView
                android:id="@+id/text_view_card_profile_holder"
                style="@style/TextRegular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Назарбаева 120"
                />

            <TextView
                android:id="@+id/text_view_card_expiring"
                style="@style/TextRegular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Истекает 12/21"
                />
        </LinearLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end|center"
            android:src="@drawable/ic_visa"
            />
    </FrameLayout>

    <TextView
        style="@style/TextRegular"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_size_16x"
        android:drawableEnd="@drawable/ic_baseline_check_24_gray"
        android:text="@string/card_prefer_payment"
        android:textColor="@color/app_gray_hint"
        />
</LinearLayout>