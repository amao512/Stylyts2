<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/white"
    android:orientation="vertical"
    android:layout_marginTop="24dp"
    android:id="@+id/linear_layout_card_container"
    android:padding="16dp">
    <FrameLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_gravity="start|center"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/text_view_card_profile_card_name"
                style="@style/TextRegular"
                android:text = "Debit Master Card"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/text_view_card_profile_holder"
                style="@style/TextRegular"
                tools:text = "Назарбаева 120"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/text_view_card_expiring"
                style="@style/TextRegular"
                tools:text = "Истекает 12/21"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <ImageView
            android:layout_gravity="end|center"
            android:src="@drawable/ic_visa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </FrameLayout>
    <TextView
        android:layout_marginTop="16dp"
        style="@style/TextRegular"
        android:textColor="@color/app_gray_hint"
        android:text="Предпочитаемый способ оплаты"
        android:drawableEnd="@drawable/ic_baseline_check_24_gray"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</LinearLayout>