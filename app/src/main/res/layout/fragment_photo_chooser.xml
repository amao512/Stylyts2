<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.fragments.main.constructor.PhotoChooserFragment"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/linear_layout_fragment_photo_chooser_container">
    <include
        android:id="@+id/include_toolbar_photo_chooser"
        layout="@layout/base_toolbar" />
    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            app:layout_collapseMode="parallax"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <FrameLayout
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:layout_width="match_parent"
                android:layout_height="350dp">
                <ImageView
                    android:scaleType="fitCenter"
                    android:id="@+id/image_view_fragment_photo_chooser"
                    android:layout_width="match_parent"
                    android:layout_height="350dp"/>
                <kz.eztech.stylyts.presentation.utils.stick.MotionView
                    android:id="@+id/motion_view_fragment_photo_chooser_tags_container"
                    android:layout_width="match_parent"
                    android:layout_height="350dp"
                    android:background="@android:color/transparent" />
            </FrameLayout>
            <androidx.recyclerview.widget.RecyclerView
                android:layout_marginTop="24dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:visibility="gone"
                android:id="@+id/recycler_view_fragment_photo_chooser_selected_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <LinearLayout
                android:id="@+id/text_view_fragment_photo_chooser_empty_text"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="120dp">
                <TextView
                    android:layout_gravity="center"
                    android:textAlignment="center"
                    android:gravity="center"
                    style="@style/TextRegular"
                    android:textColor="@color/app_gray_hint"
                    android:drawablePadding="12dp"
                    android:text="Коснитесь фотографии, чтобы отметить вещь"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

            <LinearLayout
                android:visibility="gone"
                android:id="@+id/linear_layout_fragment_photo_chooser_desc_container"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_marginTop="16dp"
                    android:layout_gravity="center"
                    android:textAlignment="center"
                    style="@style/TextRegular"
                    android:textColor="@color/app_gray_hint"
                    android:text="Что переместить метку, нажмите на нее и перетащите на желаемое место."
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </LinearLayout>
        <include
            android:id="@+id/bottom_sheet_clothes"
            layout="@layout/bottom_sheet_dialog_clothes_grid"/>
    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</LinearLayout>