<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <TextView
        android:id="@+id/item_shop_order_clothes_brand_name_text_view"
        style="@style/TitleTextBold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_size_16x"
        android:layout_marginTop="@dimen/margin_size_16x"
        android:textSize="@dimen/text_size_16x"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Nike"
        />

    <TextView
        android:id="@+id/item_shop_order_clothes_price_text_view"
        style="@style/TitleTextBold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/margin_size_16x"
        android:textSize="@dimen/text_size_16x"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/item_shop_order_clothes_brand_name_text_view"
        tools:text="17 000 KZT"
        />

    <FrameLayout
        android:id="@+id/item_shop_order_clothes_image_frame_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_size_10x"
        android:background="@drawable/rounded_rectangle_gray"
        app:layout_constraintStart_toStartOf="@id/item_shop_order_clothes_brand_name_text_view"
        app:layout_constraintTop_toBottomOf="@id/item_shop_order_clothes_brand_name_text_view"
        >

        <ImageView
            android:id="@+id/item_shop_order_clothes_image_view"
            android:layout_width="@dimen/icon_size_50x"
            android:layout_height="@dimen/icon_size_60x"
            android:layout_gravity="center"
            android:layout_margin="@dimen/margin_size_10x"
            android:scaleType="fitCenter"
            android:src="@drawable/jacket"
            />
    </FrameLayout>

    <TextView
        android:id="@+id/item_shop_order_clothes_title_text_view"
        style="@style/TextRegular"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_size_12x"
        android:textSize="@dimen/text_size_14x"
        app:layout_constraintStart_toStartOf="@id/item_shop_order_clothes_image_frame_layout"
        app:layout_constraintTop_toBottomOf="@id/item_shop_order_clothes_image_frame_layout"
        tools:text="Jacket"
        />

    <TextView
        android:id="@+id/item_shop_order_clothes_price_second_text_view"
        style="@style/TextRegular"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/margin_size_16x"
        android:textSize="@dimen/text_size_14x"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/item_shop_order_clothes_title_text_view"
        tools:text="17 000 KZT"
        />

    <TextView
        android:id="@+id/item_shop_order_clothes_count_title_text_view"
        style="@style/TextRegular"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_size_12x"
        android:text="@string/counts"
        android:textSize="@dimen/text_size_14x"
        app:layout_constraintStart_toStartOf="@id/item_shop_order_clothes_title_text_view"
        app:layout_constraintTop_toBottomOf="@id/item_shop_order_clothes_title_text_view"
        />

    <TextView
        android:id="@+id/item_shop_order_clothes_count_text_view"
        style="@style/TextRegular"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/text_size_14x"
        app:layout_constraintEnd_toEndOf="@id/item_shop_order_clothes_price_second_text_view"
        app:layout_constraintTop_toTopOf="@id/item_shop_order_clothes_count_title_text_view"
        tools:text="1"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/little_divider_height"
        android:layout_marginTop="@dimen/margin_size_16x"
        android:layout_marginBottom="@dimen/margin_size_16x"
        android:background="@color/app_dark_blue_gray_half"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/item_shop_order_clothes_count_title_text_view"
        />
</androidx.constraintlayout.widget.ConstraintLayout>