<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".profile.presentation.fragments.ProfileFragment"
    >

    <include
        android:id="@+id/include_toolbar_partner_profile"
        layout="@layout/base_toolbar"
        />

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <com.google.android.material.appbar.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <com.google.android.material.appbar.CollapsingToolbarLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/white"
                android:fitsSystemWindows="true"
                app:contentScrim="@android:color/white"
                app:layout_scrollFlags="scroll|enterAlwaysCollapsed"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_collapseMode="parallax"
                    >

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        >

                        <com.google.android.material.imageview.ShapeableImageView
                            android:id="@+id/shapeable_image_view_fragment_profile_avatar"
                            android:layout_width="@dimen/profile_user_photo_size"
                            android:layout_height="@dimen/profile_user_photo_size"
                            android:layout_gravity="center"
                            android:layout_marginTop="@dimen/margin_size_16x"
                            android:adjustViewBounds="true"
                            android:background="@drawable/rounded_rectangle_gray"
                            android:src="@drawable/jacket"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:shapeAppearanceOverlay="@style/circleImageView"
                            />

                        <TextView
                            android:id="@+id/text_view_fragment_profile_user_name"
                            style="@style/TitleTextBold"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_margin="@dimen/margin_size_12x"
                            app:layout_constraintEnd_toEndOf="@+id/shapeable_image_view_fragment_profile_avatar"
                            app:layout_constraintStart_toStartOf="@+id/shapeable_image_view_fragment_profile_avatar"
                            app:layout_constraintTop_toBottomOf="@+id/shapeable_image_view_fragment_profile_avatar"
                            tools:text="Zara"
                            />

                        <LinearLayout
                            android:id="@+id/linear_layout_fragment_profile_followers_item"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/margin_size_16x"
                            android:orientation="vertical"
                            app:layout_constraintEnd_toEndOf="@+id/text_view_fragment_profile_user_name"
                            app:layout_constraintStart_toStartOf="@+id/text_view_fragment_profile_user_name"
                            app:layout_constraintTop_toBottomOf="@+id/text_view_fragment_profile_user_name"
                            >

                            <TextView
                                style="@style/TextRegular"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                tools:text="10"
                                />

                            <TextView
                                style="@style/TextRegular"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:text="@string/followers"
                                android:textColor="@color/app_gray"
                                />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="@dimen/margin_size_24x"
                            android:orientation="vertical"
                            app:layout_constraintBottom_toBottomOf="@+id/linear_layout_fragment_profile_followers_item"
                            app:layout_constraintEnd_toStartOf="@+id/linear_layout_fragment_profile_followers_item"
                            app:layout_constraintHorizontal_bias="1.0"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="@+id/linear_layout_fragment_profile_followers_item"
                            >

                            <TextView
                                style="@style/TextRegular"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                tools:text="10"
                                />

                            <TextView
                                style="@style/TextRegular"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:text="@string/photo"
                                android:textColor="@color/app_gray"
                                />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/margin_size_24x"
                            android:orientation="vertical"
                            app:layout_constraintBottom_toBottomOf="@+id/linear_layout_fragment_profile_followers_item"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintHorizontal_bias="0.0"
                            app:layout_constraintStart_toEndOf="@+id/linear_layout_fragment_profile_followers_item"
                            app:layout_constraintTop_toTopOf="@+id/linear_layout_fragment_profile_followers_item"
                            >

                            <TextView
                                style="@style/TextRegular"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                tools:text="10"
                                />

                            <TextView
                                style="@style/TextRegular"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:text="@string/following"
                                android:textColor="@color/app_gray"
                                />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginVertical="@dimen/margin_size_16x"
                            android:orientation="horizontal"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/linear_layout_fragment_profile_followers_item"
                            >

                            <TextView
                                style="@style/TextRegularBold"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:background="@drawable/rounded_rectangle_orange"
                                android:gravity="center"
                                android:padding="@dimen/padding_size_6x"
                                android:text="@string/follow"
                                android:textColor="@color/white"
                                />

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="6dp"
                                android:background="@drawable/rounded_rectangle_white_gray_corners"
                                android:gravity="center"
                                android:padding="@dimen/padding_size_6x"
                                android:src="@drawable/ic_camera"
                                />

                            <TextView
                                style="@style/TextRegularBold"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_marginStart="6dp"
                                android:background="@drawable/rounded_rectangle_white_gray_corners"
                                android:drawableEnd="@drawable/ic_baseline_keyboard_arrow_down_24"
                                android:gravity="center"
                                android:padding="@dimen/padding_size_6x"
                                android:text="@string/for_her"
                                />
                        </LinearLayout>

                    </androidx.constraintlayout.widget.ConstraintLayout>

                </LinearLayout>

            </com.google.android.material.appbar.CollapsingToolbarLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler_view_fragment_partner_profile_filter_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/white"
                app:layout_scrollFlags="scroll|enterAlways"
                tools:listitem="@layout/item_collection_filter"
                />
        </com.google.android.material.appbar.AppBarLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_view_fragment_partner_profile_items_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"
            />
    </androidx.coordinatorlayout.widget.CoordinatorLayout>

</LinearLayout>