<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.fragments.shop.ShopItemListFragment"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <include
            android:id="@+id/include_toolbar_profile"
            layout="@layout/base_toolbar"
            />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_view_fragment_shop_item_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:listitem="@layout/item_shop_item_list"
            />
    </LinearLayout>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/fragment_category_shop_result_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_marginBottom="@dimen/margin_size_16x"
        android:backgroundTint="@color/black"
        android:text="Показать результаты (333)"
        android:textAllCaps="false"
        android:textColor="@color/white"
        />
</FrameLayout>