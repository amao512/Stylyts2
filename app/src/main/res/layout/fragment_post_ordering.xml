<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ordering.presentation.order_constructor.ui.fragments.post.PostOrderingFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <include
            android:id="@+id/fragment_post_ordering_toolbar"
            layout="@layout/base_toolbar"
            />

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:overScrollMode="never"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                >

                <TextView
                    android:id="@+id/fragment_post_title_text_view"
                    style="@style/TextRegularBold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="@dimen/padding_size_16x"
                    android:paddingTop="@dimen/padding_size_16x"
                    android:paddingBottom="0dp"
                    android:text="@string/delivery_way_post"
                    android:textSize="@dimen/text_size_16x"
                    />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/little_divider_height"
                    android:layout_marginStart="@dimen/margin_size_16x"
                    android:layout_marginTop="@dimen/margin_size_8x"
                    android:background="@color/app_gray_hint"
                    />

                <TextView
                    style="@style/TextRegularBold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_size_16x"
                    android:layout_marginTop="@dimen/margin_size_16x"
                    android:text="@string/locality"
                    android:textColor="@color/app_gray_hint"
                    />

                <EditText
                    android:id="@+id/fragment_post_ordering_city_edit_text"
                    style="@style/TextRegular"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_size_16x"
                    android:layout_marginTop="@dimen/margin_size_4x"
                    android:background="@null"
                    android:imeOptions="actionNext"
                    android:inputType="text|textPersonName"
                    tools:text="г.Алматы"
                    />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/little_divider_height"
                    android:layout_marginStart="@dimen/margin_size_16x"
                    android:layout_marginTop="@dimen/margin_size_8x"
                    android:background="@color/app_gray_hint"
                    />

                <TextView
                    style="@style/TextRegularBold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_size_16x"
                    android:layout_marginTop="@dimen/margin_size_16x"
                    android:text="@string/street"
                    android:textColor="@color/app_gray_hint"
                    />

                <EditText
                    android:id="@+id/fragment_post_ordering_street_edit_text"
                    style="@style/TextRegular"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_size_16x"
                    android:layout_marginTop="@dimen/margin_size_4x"
                    android:background="@null"
                    android:imeOptions="actionNext"
                    android:inputType="text|textPersonName"
                    />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/little_divider_height"
                    android:layout_marginStart="@dimen/margin_size_16x"
                    android:layout_marginTop="@dimen/margin_size_8x"
                    android:background="@color/app_gray_hint"
                    />

                <TextView
                    style="@style/TextRegularBold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_size_16x"
                    android:layout_marginTop="@dimen/margin_size_16x"
                    android:text="@string/house"
                    android:textColor="@color/app_gray_hint"
                    />

                <EditText
                    android:id="@+id/fragment_post_ordering_house_edit_text"
                    style="@style/TextRegular"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_size_16x"
                    android:layout_marginTop="@dimen/margin_size_4x"
                    android:background="@null"
                    android:imeOptions="actionNext"
                    android:inputType="text|textPersonName"
                    />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/little_divider_height"
                    android:layout_marginStart="@dimen/margin_size_16x"
                    android:layout_marginTop="@dimen/margin_size_8x"
                    android:background="@color/app_gray_hint"
                    />

                <TextView
                    style="@style/TextRegularBold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_size_16x"
                    android:layout_marginTop="@dimen/margin_size_16x"
                    android:text="@string/apartment"
                    android:textColor="@color/app_gray_hint"
                    />

                <EditText
                    android:id="@+id/fragment_post_ordering_apartment_edit_text"
                    style="@style/TextRegular"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_size_16x"
                    android:layout_marginTop="@dimen/margin_size_4x"
                    android:background="@null"
                    android:imeOptions="actionNext"
                    android:inputType="text|textPersonName"
                    />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/little_divider_height"
                    android:layout_marginStart="@dimen/margin_size_16x"
                    android:layout_marginTop="@dimen/margin_size_8x"
                    android:background="@color/app_gray_hint"
                    />

                <TextView
                    style="@style/TextRegularBold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_size_16x"
                    android:layout_marginTop="@dimen/margin_size_16x"
                    android:layout_marginEnd="@dimen/margin_size_70x"
                    android:text="@string/post_index"
                    android:textColor="@color/app_gray_hint"
                    />

                <EditText
                    android:id="@+id/fragment_post_ordering_post_index_edit_text"
                    style="@style/TextRegular"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_size_16x"
                    android:layout_marginTop="@dimen/margin_size_4x"
                    android:background="@null"
                    android:imeOptions="actionNext"
                    android:inputType="numberDecimal"
                    />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/medium_divider_height"
                    android:layout_marginTop="@dimen/margin_size_10x"
                    android:background="@color/large_divider_bg_color"
                    />
            </LinearLayout>

        </androidx.core.widget.NestedScrollView>

    </LinearLayout>

    <include
        android:id="@+id/fragment_post_ordering_hide_keyboard"
        layout="@layout/item_hide_keyboard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:visibility="gone"
        />
</FrameLayout>