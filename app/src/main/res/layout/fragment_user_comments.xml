<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".presentation.fragments.main.users.UserCommentsFragment">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <include
            android:id="@+id/include_toolbar_collection_detail"
            layout="@layout/base_toolbar" />
        <androidx.recyclerview.widget.RecyclerView
            tools:listitem="@layout/item_user_comment"
            android:id="@+id/recycler_view_fragment_user_comments"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </LinearLayout>
    <LinearLayout
        android:background="@color/white"
        android:layout_gravity="bottom"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <FrameLayout
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <com.google.android.material.imageview.ShapeableImageView
                android:adjustViewBounds="true"
                app:shapeAppearanceOverlay="@style/circleImageView"
                android:id="@+id/shapeable_image_view_item_user_info_avatar"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                tools:src="@drawable/jacket"/>
            <TextView
                android:layout_gravity="center"
                android:background="@drawable/circle_gray"
                android:id="@+id/text_view_item_user_comment_short_name"
                style="@style/TextRegular"
                android:text = "RE"
                android:gravity="center"
                android:layout_width="35dp"
                android:layout_height="35dp"/>
        </FrameLayout>
        <LinearLayout
            android:background="@drawable/rounded_rectangle_white_gray_corners"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:weightSum="1"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:layout_height="wrap_content">
            <EditText
                android:imeOptions="actionDone"
                style="@style/TextRegular"
                android:hint="Добавьте комментарий..."
                android:background="@null"
                android:layout_weight="0.8"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>
            <TextView
                android:textColor="@color/purple_200"
                style="@style/TextRegularBold"
                android:text="Отправить"
                android:background="@null"
                android:layout_weight="0.2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </LinearLayout>
</FrameLayout>