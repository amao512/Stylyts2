<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/rounded_top_shape_white"
    android:orientation="vertical"
    android:padding="@dimen/padding_size_16x"
    >

    <View
        android:layout_width="@dimen/bottom_dialog_top_small_divider_width"
        android:layout_height="@dimen/bottom_dialog_top_small_divider_height"
        android:layout_gravity="center"
        android:layout_marginBottom="@dimen/margin_size_32x"
        android:background="@color/app_gray_hint"
        />

    <TextView
        android:id="@+id/text_view_dialog_bottom_create_collection_chooser_public"
        style="@style/TextRegular"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_size_6x"
        android:drawableStart="@drawable/ic_send_message"
        android:drawablePadding="@dimen/padding_size_16x"
        android:text="@string/collection_chooser_publish"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/small_divider_height"
        android:layout_marginTop="@dimen/margin_size_6x"
        android:background="@color/divider_bg_color"
        />

    <TextView
        android:id="@+id/text_view_dialog_bottom_create_collection_chooser_wardrobe"
        style="@style/TextRegular"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_size_6x"
        android:drawableStart="@drawable/ic_save_icon"
        android:drawablePadding="@dimen/padding_size_16x"
        android:text="@string/collection_chooser_save"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/small_divider_height"
        android:layout_marginTop="@dimen/margin_size_6x"
        android:background="@color/divider_bg_color"
        />

    <TextView
        android:id="@+id/text_view_dialog_bottom_photo_chooser_photo_as_collection_buy"
        style="@style/TextRegular"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_size_6x"
        android:drawableStart="@drawable/ic_shopping_cart"
        android:drawablePadding="@dimen/padding_size_16x"
        android:text="@string/collection_chooser_buy"
        />
</LinearLayout>