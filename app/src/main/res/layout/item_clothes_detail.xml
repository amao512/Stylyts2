<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/item_clothes_detail_linear_layout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/margin_size_8x"
    android:orientation="vertical"
    >

    <FrameLayout
        android:layout_width="@dimen/clothes_detail_item_width"
        android:layout_height="@dimen/clothes_detail_item_height"
        android:background="@drawable/rounded_rectangle_gray"
        >

        <ImageView
            android:id="@+id/item_clothes_detail_image_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_margin="@dimen/margin_size_10x"
            android:scaleType="fitCenter"
            />

        <ImageView
            android:layout_width="@dimen/icon_size_20x"
            android:layout_height="@dimen/icon_size_20x"
            android:layout_gravity="end|top"
            android:layout_margin="@dimen/margin_size_12x"
            android:src="@drawable/ic_baseline_favorite_border_24"
            />
    </FrameLayout>

    <TextView
        android:id="@+id/item_clothes_detail_title_text_view"
        style="@style/SubtitleTextBold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/margin_size_8x"
        android:gravity="center"
        android:maxWidth="@dimen/category_type_detail_text_max_width"
        android:textAlignment="center"
        tools:text="Zaraas asd s dasdas dasd asd"
        />

    <TextView
        android:id="@+id/item_clothes_detail_sub_title_text_view"
        style="@style/TextRegular"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/margin_size_8x"
        android:maxWidth="@dimen/category_type_detail_text_max_width"
        android:textColor="@color/app_gray_hint"
        tools:text="Кожанная куртка"
        />

    <TextView
        android:id="@+id/item_clothes_detail_price_text_view"
        style="@style/TextRegularBold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/margin_size_4x"
        android:maxWidth="@dimen/category_type_detail_text_max_width"
        tools:text="35 000 тг"
        />

    <LinearLayout
        android:id="@+id/item_clothes_detail_sale_prices_linear_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/margin_size_4x"
        android:orientation="horizontal"
        android:visibility="gone"
        >

        <TextView
            android:id="@+id/item_clothes_detail_default_price_text_view"
            style="@style/TextRegularBold"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="end"
            android:maxWidth="@dimen/category_type_detail_text_max_width"
            tools:text="35 000 тг"
            />

        <TextView
            android:id="@+id/item_clothes_detail_sale_price_text_view"
            style="@style/TextRegularBold"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_size_8x"
            android:layout_weight="1"
            android:gravity="start"
            android:maxWidth="@dimen/category_type_detail_text_max_width"
            android:textColor="@color/app_dark_red"
            tools:text="35 000 тг"
            />
    </LinearLayout>

</LinearLayout>