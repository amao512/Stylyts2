<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linear_layout_fragment_photo_chooser_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".presentation.dialogs.collection_constructor.PhotoChooserDialog"
    >

    <include
        android:id="@+id/include_toolbar_photo_chooser"
        layout="@layout/base_toolbar"
        />

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_collapseMode="parallax"
            >

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/detail_photo_height"
                android:layout_marginHorizontal="@dimen/margin_size_8x"
                >

                <ImageView
                    android:id="@+id/image_view_fragment_photo_chooser"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/detail_photo_height"
                    android:scaleType="fitCenter"
                    />

                <kz.eztech.stylyts.presentation.utils.stick.MotionView
                    android:id="@+id/motion_view_fragment_photo_chooser_tags_container"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/detail_photo_height"
                    android:background="@android:color/transparent"
                    />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="bottom|start"
                    android:layout_marginStart="@dimen/margin_size_24x"
                    >

                    <FrameLayout
                        android:id="@+id/dialog_photo_chooser_clothes_tags_icon"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:background="@drawable/circle_black"
                        >

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_t_shirts"
                            />
                    </FrameLayout>

                    <FrameLayout
                        android:id="@+id/dialog_photo_chooser_user_tags_icon"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:background="@drawable/circle_black"
                        android:backgroundTint="@color/app_black_half"
                        android:layout_marginStart="@dimen/margin_size_10x"
                        >

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_person"
                            />
                    </FrameLayout>

                </LinearLayout>

            </FrameLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler_view_fragment_photo_chooser_selected_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/margin_size_16x"
                android:layout_marginTop="@dimen/margin_size_24x"
                android:orientation="horizontal"
                android:visibility="gone"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                tools:listitem="@layout/item_main_image_detail"
                />

            <LinearLayout
                android:id="@+id/text_view_fragment_photo_chooser_empty_text"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/photo_chooser_height"
                android:layout_gravity="center"
                android:orientation="horizontal"
                >

                <TextView
                    android:id="@+id/dialog_photo_chooser_tap_text_view"
                    style="@style/TextRegular"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:drawablePadding="@dimen/padding_size_12x"
                    android:gravity="center"
                    android:text="@string/photo_chooser_touch"
                    android:textAlignment="center"
                    android:textColor="@color/app_gray_hint"
                    />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linear_layout_fragment_photo_chooser_desc_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone"
                >

                <TextView
                    style="@style/TextRegular"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/margin_size_16x"
                    android:text="@string/photo_chooser_move_title"
                    android:textAlignment="center"
                    android:textColor="@color/app_gray_hint"
                    />
            </LinearLayout>

        </LinearLayout>

        <include
            android:id="@+id/bottom_sheet_clothes"
            layout="@layout/bottom_sheet_dialog_clothes_grid"
            android:visibility="gone"
            />
    </androidx.coordinatorlayout.widget.CoordinatorLayout>

</LinearLayout>