<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frame_layout_item_collection_filter"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginVertical="@dimen/margin_size_8x"
    android:layout_marginStart="@dimen/margin_size_6x"
    android:background="@drawable/rounded_rectangle_white_gray_corners"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingHorizontal="@dimen/padding_size_8x"
    android:paddingVertical="@dimen/padding_size_6x"
    >

    <ImageView
        android:id="@+id/item_collection_filter_icon_image_view"
        android:layout_width="@dimen/icon_size_14x"
        android:layout_height="@dimen/icon_size_14x"
        android:layout_marginEnd="@dimen/margin_size_6x"
        android:visibility="gone"
        app:tint="@color/black"
        tools:src="@drawable/ic_filter"
        />

    <TextView
        android:id="@+id/item_collection_filter_title_text_view"
        style="@style/TextRegularBold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Классика"
        />
</LinearLayout>