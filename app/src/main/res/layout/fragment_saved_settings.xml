<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".settings.presentation.fragments.SavedSettingsFragment"
    >

    <include
        android:id="@+id/fragment_saved_settings_toolbar"
        layout="@layout/base_toolbar"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:padding="@dimen/padding_size_24x"
        android:gravity="center"
        >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/ic_saved_outline"
            />

        <TextView
            style="@style/Bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_size_16x"
            android:text="@string/saved_settings_save"
            android:textColor="@color/app_dark_blue_gray"
            android:textSize="@dimen/text_size_18x"
            android:textStyle="bold"
            android:layout_gravity="start"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_size_8x"
            android:text="@string/saved_settings_save_subtitle"
            android:textSize="@dimen/text_size_14x"
            />
    </LinearLayout>

</LinearLayout>