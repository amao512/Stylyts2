<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <include
            android:id="@+id/include_dialog_filter_toolbar"
            layout="@layout/base_toolbar"/>
        <FrameLayout
            android:id="@+id/frame_layout_dialog_filter_constructor_main"
            android:paddingStart="24dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    style="@style/SubtitleTextBold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Фильтровать"/>

                <TextView
                    android:id="@+id/text_view_dialog_filter_constructor_my_wardrobe"
                    style="@style/TextRegular"
                    android:text = "Мой гардероб"
                    android:layout_marginTop="24dp"
                    android:layout_marginEnd="24dp"
                    android:drawableEnd="@drawable/ic_baseline_keyboard_arrow_right_24"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <View
                    android:layout_marginTop="6dp"
                    android:background="@color/app_very_light_gray"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"/>
                <TextView
                    android:id="@+id/text_view_dialog_filter_constructor_categories"
                    style="@style/TextRegular"
                    android:text = "Категории"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="24dp"
                    android:drawableEnd="@drawable/ic_baseline_keyboard_arrow_right_24"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <View
                    android:layout_marginTop="6dp"
                    android:background="@color/app_very_light_gray"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"/>
                <TextView
                    android:id="@+id/text_view_dialog_filter_constructor_brands"
                    style="@style/TextRegular"
                    android:text = "Бренды"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="24dp"
                    android:drawableEnd="@drawable/ic_baseline_keyboard_arrow_right_24"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <View
                    android:layout_marginTop="6dp"
                    android:background="@color/app_very_light_gray"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"/>
                <TextView
                    android:id="@+id/text_view_dialog_filter_constructor_colors"
                    style="@style/TextRegular"
                    android:text = "Цвета"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="24dp"
                    android:drawableEnd="@drawable/ic_baseline_keyboard_arrow_right_24"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <View
                    android:layout_marginTop="6dp"
                    android:background="@color/app_very_light_gray"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"/>
                <TextView
                    android:id="@+id/text_view_dialog_filter_constructor_price_range"
                    style="@style/TextRegular"
                    android:text = "Диапазон цент"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="24dp"
                    android:drawableEnd="@drawable/ic_baseline_keyboard_arrow_right_24"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <View
                    android:background="@color/app_very_light_gray"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"/>

                <TextView
                    android:id="@+id/text_view_dialog_filter_constructor_discount"
                    style="@style/TextRegular"
                    android:text = "Скидка"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="24dp"
                    android:drawableEnd="@drawable/ic_baseline_keyboard_arrow_right_24"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <View
                    android:layout_marginTop="6dp"
                    android:background="@color/app_very_light_gray"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"/>

            </LinearLayout>
        </FrameLayout>
        <androidx.recyclerview.widget.RecyclerView
            android:visibility="gone"
            android:id="@+id/recycler_view_dialog_filter_constructor_list"
            android:paddingStart="24dp"
            tools:listitem="@layout/item_constructor_filter_clothe_items"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </LinearLayout>
    <com.google.android.material.button.MaterialButton
        android:layout_gravity="bottom"
        android:id="@+id/button_dialog_filter_constructor_submit"
        android:imeOptions="actionNext"
        app:cornerRadius="@dimen/corner_radius_16"
        style="@style/SubtitleText"
        android:gravity="start"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="24dp"
        android:text="Показать результаты"
        android:textAllCaps="false"
        android:padding="12dp"
        android:textAlignment="center"
        android:textColor="@color/white"
        app:backgroundTint="@color/app_dark_blue_gray" />
</FrameLayout>