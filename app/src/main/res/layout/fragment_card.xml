<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".presentation.fragments.card.CardFragment"
    >

    <include
        android:id="@+id/include_toolbar_card"
        layout="@layout/base_toolbar"
        />


    <TextView
        android:id="@+id/text_view_fragment_card_profile_empty"
        style="@style/TextRegular"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="@dimen/margin_size_24x"
        android:text="@string/card_empty"
        android:visibility="gone"
        />

    <LinearLayout
        android:id="@+id/linear_layout_fragment_card_profile_add_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        >

        <TextView
            style="@style/TextRegular"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_size_24x"
            android:background="@drawable/rounded_rectangle_white_gray_corners"
            android:drawableStart="@drawable/ic_credit_card"
            android:gravity="center"
            android:padding="@dimen/padding_size_16x"
            android:text="@string/card_add"
            android:textAllCaps="false"
            />
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_view_fragment_card"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:listitem="@layout/item_user_card"
        />
</LinearLayout>