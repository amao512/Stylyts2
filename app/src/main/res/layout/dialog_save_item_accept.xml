<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    >

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        >

        <include
            android:id="@+id/include_toolbar_dialog_save_item"
            layout="@layout/base_toolbar"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/padding_size_16x"
            >

            <ImageView
                android:id="@+id/image_view_dialog_save_item_accept"
                android:layout_width="@dimen/medium_image_size"
                android:layout_height="@dimen/medium_image_size"
                android:scaleType="fitCenter"
                />

            <EditText
                android:id="@+id/edit_text_view_dialog_save_item_accept_sign"
                style="@style/TextRegular"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:hint="@string/collection_add_text"
                android:imeOptions="actionNext"
                android:inputType="text|textPersonName"
                android:paddingHorizontal="@dimen/padding_size_24x"
                android:paddingVertical="@dimen/padding_size_16x"
                />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/small_divider_height"
            android:background="@color/app_gray"
            />

        <FrameLayout
            android:id="@+id/frame_layout_dialog_create_collection_accept_choose_clothes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/padding_size_16x"
            android:visibility="gone"
            >

            <TextView
                style="@style/TextRegular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center|start"
                android:text="@string/collection_accept_cancel_items"
                />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center|end"
                android:src="@drawable/ic_baseline_keyboard_arrow_right_24"
                />
        </FrameLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/small_divider_height"
            android:background="@color/app_gray"
            />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>