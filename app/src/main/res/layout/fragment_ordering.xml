<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".presentation.fragments.order_constructor.OrderingFragment"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <include
            android:id="@+id/fragment_ordering_toolbar"
            layout="@layout/base_toolbar"
            />

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                >

                <TextView
                    style="@style/TextRegularBold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="@dimen/padding_size_16x"
                    android:paddingTop="@dimen/padding_size_16x"
                    android:paddingBottom="0dp"
                    android:text="@string/select_payment_way"
                    android:textSize="@dimen/text_size_16x"
                    />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/little_divider_height"
                    android:layout_marginStart="@dimen/margin_size_16x"
                    android:layout_marginTop="@dimen/margin_size_16x"
                    android:background="@color/app_gray_hint"
                    />

                <LinearLayout
                    android:id="@+id/fragment_ordering_payment_cash_linear_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="?attr/selectableItemBackground"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:padding="@dimen/padding_size_16x"
                    >

                    <TextView
                        style="@style/TextRegular"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/payment_cash"
                        android:textSize="@dimen/text_size_14x"
                        />

                    <ImageView
                        android:id="@+id/fragment_ordering_payment_cash_selected_image_view"
                        android:layout_width="@dimen/icon_size_20x"
                        android:layout_height="@dimen/icon_size_20x"
                        android:background="@drawable/circle_light_green"
                        android:src="@drawable/ic_baseline_check_24"
                        android:visibility="gone"
                        />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/little_divider_height"
                    android:layout_marginStart="@dimen/margin_size_16x"
                    android:background="@color/app_gray_hint"
                    />

                <LinearLayout
                    android:id="@+id/fragment_ordering_payment_card_linear_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="?attr/selectableItemBackground"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:padding="@dimen/padding_size_16x"
                    >

                    <TextView
                        style="@style/TextRegular"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/payment_card"
                        android:textSize="@dimen/text_size_14x"
                        />

                    <ImageView
                        android:id="@+id/fragment_ordering_payment_card_selected_image_view"
                        android:layout_width="@dimen/icon_size_20x"
                        android:layout_height="@dimen/icon_size_20x"
                        android:background="@drawable/circle_light_green"
                        android:src="@drawable/ic_baseline_check_24"
                        android:visibility="gone"
                        />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/medium_divider_height"
                    android:layout_marginTop="@dimen/margin_size_10x"
                    android:background="@color/large_divider_bg_color"
                    />

                <TextView
                    style="@style/TextRegularBold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="@dimen/padding_size_16x"
                    android:paddingTop="@dimen/padding_size_16x"
                    android:paddingBottom="0dp"
                    android:text="@string/to_pay"
                    android:textSize="@dimen/text_size_16x"
                    />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/little_divider_height"
                    android:layout_marginStart="@dimen/margin_size_16x"
                    android:layout_marginTop="@dimen/margin_size_16x"
                    android:background="@color/app_gray_hint"
                    />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/padding_size_16x"
                    >

                    <TextView
                        android:id="@+id/fragment_ordering_goods_count_title_text_view"
                        style="@style/TextRegular"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/goods_count"
                        android:textSize="@dimen/text_size_14x"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        />

                    <TextView
                        android:id="@+id/fragment_ordering_goods_count_text_view"
                        style="@style/TextRegular"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/text_size_14x"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="@id/fragment_ordering_goods_count_title_text_view"
                        tools:text="1"
                        />

                    <TextView
                        android:id="@+id/fragment_ordering_goods_price_sum_title_text_view"
                        style="@style/TextRegular"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_size_8x"
                        android:text="@string/goods_price_sum"
                        android:textSize="@dimen/text_size_14x"
                        app:layout_constraintStart_toStartOf="@id/fragment_ordering_goods_count_title_text_view"
                        app:layout_constraintTop_toBottomOf="@id/fragment_ordering_goods_count_title_text_view"
                        />

                    <TextView
                        android:id="@+id/fragment_ordering_price_sum_text_view"
                        style="@style/TextRegular"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/text_size_14x"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="@id/fragment_ordering_goods_price_sum_title_text_view"
                        tools:text="10 000 KZT"
                        />

                    <TextView
                        android:id="@+id/fragment_ordering_delivery_title_text_view"
                        style="@style/TextRegular"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_size_8x"
                        android:text="@string/delivery"
                        android:textSize="@dimen/text_size_14x"
                        app:layout_constraintStart_toStartOf="@id/fragment_ordering_goods_price_sum_title_text_view"
                        app:layout_constraintTop_toBottomOf="@id/fragment_ordering_goods_price_sum_title_text_view"
                        />

                    <TextView
                        android:id="@+id/fragment_ordering_delivery_price_text_view"
                        style="@style/TextRegular"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/text_size_14x"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="@id/fragment_ordering_delivery_title_text_view"
                        tools:text="500 KZT"
                        />

                    <TextView
                        android:id="@+id/fragment_ordering_discount_title_text_view"
                        style="@style/TextRegular"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_size_8x"
                        android:text="@string/discount"
                        android:textColor="@color/app_light_orange"
                        android:textSize="@dimen/text_size_14x"
                        app:layout_constraintStart_toStartOf="@id/fragment_ordering_delivery_title_text_view"
                        app:layout_constraintTop_toBottomOf="@id/fragment_ordering_delivery_title_text_view"
                        />

                    <TextView
                        android:id="@+id/fragment_ordering_discount_price_text_view"
                        style="@style/TextRegular"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/app_light_orange"
                        android:textSize="@dimen/text_size_14x"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="@id/fragment_ordering_discount_title_text_view"
                        tools:text="-1000 KZT"
                        />

                    <TextView
                        android:id="@+id/fragment_ordering_total_price_title_text_view"
                        style="@style/TextRegularBold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_size_16x"
                        android:paddingBottom="0dp"
                        android:text="@string/total"
                        android:textSize="@dimen/text_size_16x"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="@id/fragment_ordering_discount_title_text_view"
                        app:layout_constraintTop_toBottomOf="@id/fragment_ordering_discount_title_text_view"
                        />

                    <TextView
                        android:id="@+id/fragment_ordering_total_price_text_view"
                        style="@style/TextRegularBold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingBottom="0dp"
                        android:textSize="@dimen/text_size_16x"
                        app:layout_constraintBottom_toBottomOf="@id/fragment_ordering_total_price_title_text_view"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="@id/fragment_ordering_total_price_title_text_view"
                        tools:text="10 500 KZT"
                        />
                </androidx.constraintlayout.widget.ConstraintLayout>

            </LinearLayout>

        </androidx.core.widget.NestedScrollView>

    </LinearLayout>

    <Button
        android:id="@+id/fragment_ordering_complete_button"
        style="@style/TitleText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_marginHorizontal="@dimen/margin_size_24x"
        android:layout_marginBottom="@dimen/margin_size_16x"
        android:backgroundTint="@color/app_light_orange"
        android:paddingVertical="@dimen/padding_size_10x"
        android:text="@string/ordering_button_text_format"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_16x"
        app:cornerRadius="@dimen/button_corners_radius"
        tools:text="Оформить заказ на 10 500 KZT"
        />

    <include
        android:id="@+id/fragment_ordering_progress_bar"
        layout="@layout/base_progress"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        />
</FrameLayout>