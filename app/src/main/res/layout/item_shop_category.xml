<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraint_layout_item_shop_category"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/margin_size_8x"
    android:background="?attr/selectableItemBackground"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_rectangle_gray"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        >

        <TextView
            android:id="@+id/text_view_item_shop_fragment"
            style="@style/TitleTextBold"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_size_16x"
            android:layout_marginEnd="@dimen/margin_size_32x"
            android:textColor="@color/app_dark_blue_gray"
            tools:text="ОДЕЖДА"
            />

        <ImageView
            android:id="@+id/image_view_item_shop_fragment"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/shop_category_image_height"
            android:layout_marginEnd="@dimen/margin_size_12x"
            tools:src="@drawable/jacket"
            />
    </LinearLayout>

</FrameLayout>