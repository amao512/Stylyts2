<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".presentation.fragments.profile.ProfileIncomeFragment"
    >

    <include
        android:id="@+id/include_toolbar_income"
        layout="@layout/base_toolbar"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/padding_size_24x"
        >

        <TextView
            style="@style/TitleTextBold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/profile_income_title"
            android:textSize="@dimen/text_size_30x"
            />

        <TextView
            style="@style/TitleTextBold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_size_16x"
            android:text="70 360 тг."
            android:textColor="@color/income_text_color"
            android:textSize="@dimen/text_size_30x"
            />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/medium_divider_height"
        android:background="@color/large_divider_bg_color"
        />

    <include
        android:id="@+id/include_item_profile_income_dates"
        layout="@layout/item_profile_income_dates"
        />
</LinearLayout>