<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".presentation.fragments.main.profile.ProfileCardFragment">
    <include
        android:id="@+id/include_toolbar_profile_card"
        layout="@layout/base_toolbar" />
    <FrameLayout
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <FrameLayout
                android:background="@color/app_very_light_gray"
                android:paddingStart="40dp"
                android:paddingEnd="40dp"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textAlignment="center"
                    style="@style/TextRegular"
                    android:textColor="#2F3641"
                    android:text="У вас отсутствуют сохраненные способы оплаты. Добавьте карту"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </FrameLayout>
            <FrameLayout
                android:paddingStart="24dp"
                android:paddingEnd="24dp"
                android:paddingTop="16dp"
                android:paddingBottom="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <FrameLayout
                    android:background="@drawable/rounded_rectangle_white_gray_corners"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:paddingStart="16dp"
                        android:paddingEnd="16dp"
                        android:paddingTop="8dp"
                        android:paddingBottom="8dp"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:layout_gravity="center"
                            android:scaleType="fitXY"
                            android:src="@drawable/ic_credit_card"
                            android:layout_width="36dp"
                            android:layout_height="36dp"/>
                        <TextView
                            android:layout_marginStart="16dp"
                            android:layout_gravity="center"
                            android:text="Добавить Кредитную/Дебетовую Карту"
                            style="@style/TextRegular"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                </FrameLayout>
            </FrameLayout>
        </LinearLayout>
    </FrameLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:background="@color/app_very_light_gray"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:padding="16dp"
                android:background="@color/white"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:text="Номер карты"
                    style="@style/SubtitleText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <EditText
                    style="@style/TextRegular"
                    android:layout_marginTop="8dp"
                    android:drawableStart="@drawable/ic_credit_card"
                    android:drawablePadding="8dp"
                    android:background="@null"
                    android:hint="Номер карты"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <View
                    android:background="@color/app_black"
                    android:layout_marginTop="4dp"
                    android:padding="8dp"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"/>
                <TextView
                    android:layout_marginTop="24dp"
                    android:text="Дата истечения срока действия карты"
                    style="@style/TextRegular"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <EditText
                    style="@style/TextRegular"
                    android:layout_marginTop="24dp"
                    android:background="@null"
                    android:hint="Месяц/Год"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <View
                    android:background="@color/app_very_light_gray"
                    android:layout_marginTop="8dp"
                    android:padding="8dp"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"/>
                <TextView
                    android:layout_marginTop="24dp"
                    android:text="Имя на карте"
                    style="@style/TextRegular"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <EditText
                    style="@style/TextRegular"
                    android:layout_marginTop="24dp"
                    android:background="@null"
                    android:hint="Имя Фамилия"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <View
                    android:background="@color/app_very_light_gray"
                    android:layout_marginTop="8dp"
                    android:padding="8dp"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"/>
            </LinearLayout>
            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_fragment_refresh_password_send_password"
                style="@style/SubtitleText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="32dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:gravity="start"
                android:imeOptions="actionNext"
                android:padding="12dp"
                android:text="Сохранить карту"
                android:textAlignment="center"
                android:textAllCaps="false"
                android:textColor="@color/white"
                app:backgroundTint="@color/app_dark_blue_gray"
                app:cornerRadius="@dimen/corner_radius_default" />
        </LinearLayout>
    </FrameLayout>
</LinearLayout>