<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".presentation.fragments.shop.CategoryTypeDetailFragment"
    >

    <include
        android:id="@+id/include_toolbar_profile"
        layout="@layout/base_toolbar"
        />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/fragment_category_type_detail_brands_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        tools:listitem="@layout/item_collection_filter"
        />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_view_fragment_category_type_detail"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingHorizontal="@dimen/padding_size_8x"
        app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
        app:spanCount="2"
        tools:listitem="@layout/item_category_type_detail"
        />
</LinearLayout>