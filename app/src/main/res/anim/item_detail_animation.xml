<?xml version="1.0" encoding="utf-8"?>
<set xmlns:android="http://schemas.android.com/apk/res/android">
    <rotate
        android:duration="300"
        android:fromDegrees="-40"
        android:pivotX="0%"
        android:pivotY="50%"
        android:toDegrees="0" />
    <alpha
        android:duration="500"
        android:fromAlpha="0"
        android:toAlpha="1"/>
    <translate
        android:duration="300"
        android:fromXDelta="-100"
        android:toXDelta="0"/>
</set>