<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frame_layout_base_toolbar_container"
    android:layout_width="match_parent"
    android:layout_height="?attr/actionBarSize"
    android:background="@color/white"
    app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
    >

    <ImageButton
        android:id="@+id/toolbar_left_corner_action_image_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start|center"
        android:layout_marginStart="@dimen/margin_size_12x"
        android:background="?attr/selectableItemBackground"
        android:paddingVertical="@dimen/padding_size_12x"
        android:paddingStart="0dp"
        android:paddingEnd="@dimen/padding_size_12x"
        tools:src="@drawable/ic_baseline_keyboard_arrow_left_24"
        />

    <TextView
        android:id="@+id/toolbar_back_text_view"
        style="@style/TextRegular"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start|center"
        android:drawablePadding="@dimen/padding_size_12x"
        android:gravity="center"
        android:padding="@dimen/padding_size_8x"
        android:background="?attr/selectableItemBackground"
        android:text="@string/back"
        android:visibility="gone"
        app:drawableStartCompat="@drawable/ic_baseline_keyboard_arrow_left_24"
        />

    <TextView
        android:id="@+id/toolbar_title_text_view"
        style="@style/TextRegularBold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:visibility="gone"
        tools:text="SomeText"
        />

    <ImageButton
        android:id="@+id/toolbar_center_action_image_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="?attr/selectableItemBackground"
        android:visibility="gone"
        tools:src="@drawable/ic_camera"
        />

    <ImageButton
        android:id="@+id/toolbar_right_corner_action_image_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center|end"
        android:background="?attr/selectableItemBackground"
        android:padding="@dimen/padding_size_12x"
        android:visibility="gone"
        tools:src="@drawable/ic_camera"
        />

    <TextView
        android:id="@+id/toolbar_right_text_text_view"
        style="@style/TextRegularBold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center|end"
        android:padding="@dimen/padding_size_12x"
        android:background="?attr/selectableItemBackground"
        android:visibility="gone"
        tools:text="SomeText"
        />

    <LinearLayout
        android:id="@+id/base_toolbar_title_with_subtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="gone"
        >

        <TextView
            android:id="@+id/base_toolbar_small_title_text_view"
            style="@style/TextRegularBold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Title"
            />

        <TextView
            android:id="@+id/base_toolbar_small_title_sub_text_view"
            style="@style/TextRegular"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Subtitle"
            />
    </LinearLayout>

    <View
        android:id="@+id/toolbar_bottom_border_view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/little_divider_height"
        android:layout_gravity="bottom"
        android:background="@color/toolbar_border"
        />
</FrameLayout>