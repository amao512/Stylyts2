<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frame_layout_base_toolbar_container"
    android:layout_width="match_parent"
    android:layout_height="?attr/actionBarSize"
    android:background="@color/white"
    android:elevation="@dimen/toolbar_elevation"
    app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
    >

    <ImageButton
        android:id="@+id/image_button_left_corner_action"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start|center"
        android:layout_marginStart="@dimen/margin_size_12x"
        android:background="?attr/selectableItemBackground"
        android:visibility="gone"
        tools:src="@drawable/ic_camera"
        />

    <TextView
        android:id="@+id/text_view_toolbar_back"
        style="@style/TextRegular"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start|center"
        android:layout_marginStart="@dimen/margin_size_12x"
        android:drawablePadding="@dimen/padding_size_12x"
        android:gravity="center"
        android:text="@string/back"
        android:visibility="gone"
        app:drawableStartCompat="@drawable/ic_baseline_keyboard_arrow_left_24"
        />

    <TextView
        android:id="@+id/text_view_toolbar_title"
        style="@style/TextRegularBold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:visibility="gone"
        tools:text="SomeText"
        />

    <ImageButton
        android:id="@+id/image_button_center_action"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="?attr/selectableItemBackground"
        android:visibility="gone"
        tools:src="@drawable/ic_camera"
        />

    <ImageButton
        android:id="@+id/image_button_right_corner_action"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center|end"
        android:layout_marginEnd="@dimen/margin_size_12x"
        android:background="?attr/selectableItemBackground"
        android:visibility="gone"
        tools:src="@drawable/ic_camera"
        />

    <TextView
        android:id="@+id/text_view_toolbar_right_text"
        style="@style/TextRegularBold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center|end"
        android:layout_marginEnd="@dimen/margin_size_12x"
        android:visibility="gone"
        tools:text="SomeText"
        />
</FrameLayout>