<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".presentation.fragments.RegistrationFragment">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <include
            android:id="@+id/include_toolbar"
            layout="@layout/base_toolbar"/>
        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_margin="24dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <EditText
                        android:id="@+id/edit_text_view_fragment_registration_name"
                        android:inputType="text|textPersonName"
                        android:hint="@string/name"
                        android:imeOptions="actionNext"
                        android:paddingStart="24dp"
                        android:paddingBottom="16dp"
                        android:paddingEnd="24dp"
                        android:paddingTop="16dp"
                        android:background="@drawable/rounded_rectangle_white_gray_corners_flat_bottom"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                    <EditText
                        android:id="@+id/edit_text_view_fragment_registration_last_name"
                        android:inputType="text|textPersonName"
                        android:hint="@string/surname"
                        android:imeOptions="actionNext"
                        android:paddingStart="24dp"
                        android:paddingBottom="16dp"
                        android:paddingEnd="24dp"
                        android:paddingTop="16dp"
                        android:background="@drawable/rectangle_white_gray_corners"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                    <EditText
                        android:id="@+id/edit_text_view_fragment_registration_username"
                        android:inputType="text|textPersonName"
                        android:hint="Никнейм"
                        android:imeOptions="actionNext"
                        android:paddingStart="24dp"
                        android:paddingBottom="16dp"
                        android:paddingEnd="24dp"
                        android:paddingTop="16dp"
                        android:background="@drawable/rounded_rectangle_white_gray_corners_flat_top"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                </LinearLayout>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/button_fragment_registration_date"
                    android:imeOptions="actionNext"
                    style="@style/SubtitleText"
                    android:gravity="start"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    android:background="@drawable/rounded_rectangle_white_gray_corners"
                    android:text="@string/fragment_registration_birth_date"
                    android:textAllCaps="false"
                    android:textColor="@color/app_gray_hint"
                    app:backgroundTint="@null" />

                <EditText
                    android:id="@+id/edit_text_view_fragment_registration_email"
                    android:layout_marginTop="24dp"
                    android:inputType="textEmailAddress"
                    android:hint="@string/email"
                    android:imeOptions="actionNext"
                    android:paddingStart="24dp"
                    android:paddingBottom="16dp"
                    android:paddingEnd="24dp"
                    android:paddingTop="16dp"
                    android:background="@drawable/rounded_rectangle_gray_gray_corners"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <EditText
                    android:id="@+id/edit_text_view_fragment_registration_password"
                    android:layout_marginTop="24dp"
                    android:inputType="textPassword"
                    android:hint="@string/password"
                    android:imeOptions="actionNext"
                    android:paddingStart="24dp"
                    android:paddingBottom="16dp"
                    android:paddingEnd="24dp"
                    android:paddingTop="16dp"
                    android:background="@drawable/rounded_rectangle_white_gray_corners"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <EditText
                    android:id="@+id/edit_text_view_fragment_registration_password_repeat"
                    android:layout_marginTop="24dp"
                    android:inputType="textPassword"
                    android:hint="@string/password_repeat"
                    android:imeOptions="actionDone"
                    android:imeActionId="6"
                    android:paddingStart="24dp"
                    android:paddingBottom="16dp"
                    android:paddingEnd="24dp"
                    android:paddingTop="16dp"
                    android:background="@drawable/rounded_rectangle_white_gray_corners"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/text_view_fragment_registration_term"
                    android:layout_marginTop="24dp"
                    style="@style/TextRegular"
                    android:text="@string/fragment_registration_term"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/button_fragment_registration_submit"
                    android:imeOptions="actionNext"
                    app:cornerRadius="@dimen/corner_radius_default"
                    style="@style/SubtitleText"
                    android:gravity="start"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    android:text="@string/fragment_registration_complete"
                    android:textAllCaps="false"
                    android:padding="12dp"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    app:backgroundTint="@color/app_black" />

                <TextView
                    android:layout_marginTop="24dp"
                    style="@style/TextRegular"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/fragment_registration_notification_info"/>

                <CheckBox
                    android:layout_marginTop="24dp"
                    style="@style/TextRegular"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/fragment_registration_notification_info_reject_checkbox"/>
            </LinearLayout>
        </androidx.core.widget.NestedScrollView>
    </LinearLayout>
    <include
        android:visibility="gone"
        android:id="@+id/include_base_progress"
        layout="@layout/base_progess"/>
</FrameLayout>