<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".auth.presentation.ui.RegistrationFragment"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <include
            android:id="@+id/include_toolbar"
            layout="@layout/base_toolbar"
            />

        <androidx.core.widget.NestedScrollView
            android:id="@+id/fragment_registration_username_linear_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_size_64x"
                android:orientation="vertical"
                android:padding="@dimen/padding_size_16x"
                >

                <TextView
                    style="@style/TitleTextBold"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/registration_create_username_title"
                    android:textAlignment="center"
                    android:textSize="@dimen/text_size_24x"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/margin_size_24x"
                    android:layout_marginTop="@dimen/margin_size_10x"
                    android:text="@string/registration_create_username_subtitle"
                    android:textAlignment="center"
                    />

                <EditText
                    android:id="@+id/edit_text_view_fragment_registration_username"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_size_24x"
                    android:background="@drawable/rounded_rectangle_white_gray_corners"
                    android:digits="ABCDEFGHIJKLMNOPQRSTUVWXYZabcdefghijklmnopqrstuvwxyz1234567890._-"
                    android:hint="@string/username"
                    android:imeOptions="actionNext"
                    android:inputType="textFilter"
                    android:paddingHorizontal="@dimen/padding_size_24x"
                    android:paddingVertical="@dimen/padding_size_16x"
                    android:textAllCaps="false"
                    />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/fragment_registration_check_username_button"
                    style="@style/SubtitleText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_size_16x"
                    android:gravity="start"
                    android:imeOptions="actionNext"
                    android:padding="@dimen/padding_size_12x"
                    android:text="@string/next"
                    android:textAlignment="center"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    app:backgroundTint="@color/app_black"
                    app:cornerRadius="@dimen/corner_radius_default"
                    />
            </LinearLayout>

        </androidx.core.widget.NestedScrollView>

        <androidx.core.widget.NestedScrollView
            android:id="@+id/fragment_registration_fields_scroll_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_size_24x"
                android:orientation="vertical"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >

                    <EditText
                        android:id="@+id/edit_text_view_fragment_registration_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/rounded_rectangle_white_gray_corners_flat_bottom"
                        android:hint="@string/name"
                        android:imeOptions="actionNext"
                        android:inputType="text|textPersonName"
                        android:paddingHorizontal="@dimen/padding_size_24x"
                        android:paddingVertical="@dimen/padding_size_16x"
                        />

                    <EditText
                        android:id="@+id/edit_text_view_fragment_registration_last_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/rounded_rectangle_white_gray_corners_flat_top"
                        android:hint="@string/surname"
                        android:imeOptions="actionNext"
                        android:inputType="text|textPersonName"
                        android:paddingHorizontal="@dimen/padding_size_24x"
                        android:paddingVertical="@dimen/padding_size_16x"
                        />
                </LinearLayout>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/button_fragment_registration_date"
                    style="@style/SubtitleText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_size_24x"
                    android:background="@drawable/rounded_rectangle_white_gray_corners"
                    android:gravity="start"
                    android:imeOptions="actionNext"
                    android:text="@string/fragment_registration_birth_date"
                    android:textAllCaps="false"
                    android:textColor="@color/app_gray_hint"
                    app:backgroundTint="@null"
                    />

                <EditText
                    android:id="@+id/edit_text_view_fragment_registration_email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_size_24x"
                    android:background="@drawable/rounded_rectangle_gray_gray_corners"
                    android:hint="@string/email"
                    android:imeOptions="actionNext"
                    android:inputType="textEmailAddress"
                    android:paddingHorizontal="@dimen/padding_size_24x"
                    android:paddingVertical="@dimen/padding_size_16x"
                    />

                <EditText
                    android:id="@+id/edit_text_view_fragment_registration_password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_size_24x"
                    android:background="@drawable/rounded_rectangle_white_gray_corners"
                    android:hint="@string/password"
                    android:imeOptions="actionNext"
                    android:inputType="textPassword"
                    android:paddingHorizontal="@dimen/padding_size_24x"
                    android:paddingVertical="@dimen/padding_size_16x"
                    />

                <EditText
                    android:id="@+id/edit_text_view_fragment_registration_password_repeat"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_size_24x"
                    android:background="@drawable/rounded_rectangle_white_gray_corners"
                    android:hint="@string/password_repeat"
                    android:imeActionId="6"
                    android:imeOptions="actionDone"
                    android:inputType="textPassword"
                    android:paddingHorizontal="@dimen/padding_size_24x"
                    android:paddingVertical="@dimen/padding_size_16x"
                    />

                <TextView
                    android:id="@+id/text_view_fragment_registration_term"
                    style="@style/TextRegular"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_size_24x"
                    android:text="@string/fragment_registration_term"
                    />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/button_fragment_registration_submit"
                    style="@style/SubtitleText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_size_24x"
                    android:gravity="start"
                    android:imeOptions="actionNext"
                    android:padding="@dimen/padding_size_12x"
                    android:text="@string/fragment_registration_complete"
                    android:textAlignment="center"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    app:backgroundTint="@color/app_black"
                    app:cornerRadius="@dimen/corner_radius_default"
                    />

                <TextView
                    style="@style/TextRegular"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_size_24x"
                    android:text="@string/fragment_registration_notification_info"
                    />

                <CheckBox
                    android:id="@+id/fragment_registration_should_send_mail_check_box"
                    style="@style/TextRegular"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_size_24x"
                    android:text="@string/fragment_registration_notification_info_reject_checkbox"
                    />
            </LinearLayout>

        </androidx.core.widget.NestedScrollView>

    </LinearLayout>

    <include
        android:id="@+id/include_base_progress"
        layout="@layout/base_progress"
        android:visibility="gone"
        />
</FrameLayout>