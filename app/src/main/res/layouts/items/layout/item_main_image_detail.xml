<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/frame_layout_item_main_image_holder_container"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginEnd="@dimen/margin_size_16x"
    android:background="@drawable/rounded_rectangle_very_light_gray_white_corners_half_transparent"
    >

    <ImageView
        android:id="@+id/image_view_image_detail_image_view"
        android:layout_width="@dimen/main_image_detail_image_width"
        android:layout_height="@dimen/main_image_detail_image_height"
        android:layout_margin="@dimen/margin_size_10x"
        android:src="@drawable/jacket"
        />

    <FrameLayout
        android:id="@+id/item_main_image_detail_user_tag_frame_layout"
        android:layout_width="@dimen/icon_size_24x"
        android:layout_height="@dimen/icon_size_24x"
        android:layout_gravity="end"
        android:layout_margin="@dimen/margin_size_6x"
        android:background="@drawable/circle_black"
        android:backgroundTint="@color/app_black_half"
        android:visibility="gone"
        >

        <ImageView
            android:layout_width="@dimen/icon_size_18x"
            android:layout_height="@dimen/icon_size_18x"
            android:layout_gravity="center"
            android:paddingStart="0dp"
            android:paddingEnd="1dp"
            android:paddingBottom="0.5dp"
            android:src="@drawable/ic_user_tags"
            />
    </FrameLayout>

</FrameLayout>