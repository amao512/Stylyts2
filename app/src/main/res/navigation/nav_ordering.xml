<?xml version="1.0" encoding="utf-8"?>
<navigation
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_ordering"
    app:startDestination="@id/customerInfoFragment"
    >

    <fragment
        android:id="@+id/customerInfoFragment"
        android:name="kz.eztech.stylyts.presentation.fragments.order_constructor.OrderingCustomerInfoFragment"
        android:label="fragment_ordering"
        tools:layout="@layout/fragment_ordering_customer_info"
        >
        <action
            android:id="@+id/action_customerInfoFragment_to_selectDeliveryWayFragment"
            app:destination="@id/selectDeliveryWayFragment"
            />
    </fragment>
    <fragment
        android:id="@+id/selectDeliveryWayFragment"
        android:name="kz.eztech.stylyts.presentation.fragments.order_constructor.SelectDeliveryWayFragment"
        android:label="fragment_ordering_data"
        tools:layout="@layout/fragment_select_delivery_way"
        >
        <action
            android:id="@+id/action_selectDeliveryWayFragment_to_courierOrderingFragment"
            app:destination="@id/courierOrderingFragment"
            />
        <action
            android:id="@+id/action_selectDeliveryWayFragment_to_pickupOrderingFragment"
            app:destination="@id/pickupOrderingFragment"
            />
    </fragment>
    <fragment
        android:id="@+id/courierOrderingFragment"
        android:name="kz.eztech.stylyts.presentation.fragments.order_constructor.CourierOrderingFragment"
        android:label="CourierOrderingFragment"
        >
        <action
            android:id="@+id/action_courierOrderingFragment_to_orderingFragment"
            app:destination="@id/orderingFragment"
            />
    </fragment>
    <fragment
        android:id="@+id/pickupOrderingFragment"
        android:name="kz.eztech.stylyts.presentation.fragments.order_constructor.PickupOrderingFragment"
        android:label="fragment_pickup_ordering"
        tools:layout="@layout/fragment_pickup_ordering"
        />
    <fragment
        android:id="@+id/orderingFragment"
        android:name="kz.eztech.stylyts.presentation.fragments.order_constructor.OrderingFragment"
        android:label="fragment_ordering"
        tools:layout="@layout/fragment_ordering"
        >
        <action
            android:id="@+id/action_orderingFragment_to_cardFragment"
            app:destination="@id/cardFragment"
            />
        <action
            android:id="@+id/action_orderingFragment_to_paymentFragment"
            app:destination="@id/paymentFragment"
            />
        <action
            android:id="@+id/action_orderingFragment_to_orderListFragment"
            app:destination="@id/orderListFragment"
            />
    </fragment>

    <fragment
        android:id="@+id/saveCardFragment"
        android:name="kz.eztech.stylyts.presentation.fragments.card.SaveCardFragment"
        android:label="SaveCardFragment"
        />

    <fragment
        android:id="@+id/cardFragment"
        android:name="kz.eztech.stylyts.presentation.fragments.card.CardFragment"
        android:label="fragment_card"
        tools:layout="@layout/fragment_card"
        >
        <action
            android:id="@+id/action_cardFragment_to_saveCardFragment"
            app:destination="@id/saveCardFragment"
            />
    </fragment>

    <fragment
        android:id="@+id/paymentFragment"
        android:name="kz.eztech.stylyts.presentation.fragments.order_constructor.PaymentFragment"
        android:label="PaymentFragment"
        />

    <fragment
        android:id="@+id/orderListFragment"
        android:name="kz.eztech.stylyts.presentation.fragments.order.OrderListFragment"
        android:label="OrderListFragment"
        />
    <include app:graph="@navigation/nav_profile" />
</navigation>