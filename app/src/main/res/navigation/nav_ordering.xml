<?xml version="1.0" encoding="utf-8"?>
<navigation
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_ordering"
    app:startDestination="@id/cartFragment"
    >

    <fragment
        android:id="@+id/cartFragment"
        android:name="kz.eztech.stylyts.presentation.fragments.order_constructor.CartFragment"
        android:label="CartFragment"
        >
        <action
            android:id="@+id/action_cartFragment_to_customerInfoFragment"
            app:destination="@id/customerInfoFragment"
            />
        <action
            android:id="@+id/action_cartFragment_to_clothesDetailFragment"
            app:destination="@id/clothesDetailFragment"
            />
    </fragment>

    <fragment
        android:id="@+id/customerInfoFragment"
        android:name="kz.eztech.stylyts.presentation.fragments.order_constructor.OrderingCustomerInfoFragment"
        android:label="fragment_ordering"
        tools:layout="@layout/fragment_ordering_customer_info"
        >
        <action
            android:id="@+id/action_customerInfoFragment_to_selectDeliveryWayFragment"
            app:destination="@id/selectDeliveryWayFragment"
            />
    </fragment>
    <fragment
        android:id="@+id/selectDeliveryWayFragment"
        android:name="kz.eztech.stylyts.presentation.fragments.order_constructor.SelectDeliveryWayFragment"
        android:label="fragment_ordering_data"
        tools:layout="@layout/fragment_select_delivery_way"
        >
        <action
            android:id="@+id/action_selectDeliveryWayFragment_to_courierOrderingFragment"
            app:destination="@id/courierOrderingFragment"
            />
        <action
            android:id="@+id/action_selectDeliveryWayFragment_to_selectPickupFittingWayFragment"
            app:destination="@id/selectPickupFittingWayFragment"
            />
        <action
            android:id="@+id/action_selectDeliveryWayFragment_to_postOrderingFragment"
            app:destination="@id/postOrderingFragment"
            />
    </fragment>
    <fragment
        android:id="@+id/courierOrderingFragment"
        android:name="kz.eztech.stylyts.presentation.fragments.order_constructor.courier.CourierOrderingFragment"
        android:label="CourierOrderingFragment"
        >
        <action
            android:id="@+id/action_courierOrderingFragment_to_orderingFragment"
            app:destination="@id/orderingFragment"
            />
    </fragment>
    <fragment
        android:id="@+id/selectPickupFittingWayFragment"
        android:name="kz.eztech.stylyts.presentation.fragments.order_constructor.self_pickup.SelectPickupFittingWayFragment"
        android:label="fragment_pickup_ordering"
        tools:layout="@layout/fragment_pickup_fitting_way_ordering"
        >
        <action
            android:id="@+id/action_pickupOrderingFragment_to_pickupPointsFragment"
            app:destination="@id/pickupPointsFragment"
            />
    </fragment>
    <fragment
        android:id="@+id/orderingFragment"
        android:name="kz.eztech.stylyts.presentation.fragments.order_constructor.OrderingFragment"
        android:label="fragment_ordering"
        tools:layout="@layout/fragment_ordering"
        >
        <action
            android:id="@+id/action_orderingFragment_to_cardFragment"
            app:destination="@id/cardFragment"
            />
        <action
            android:id="@+id/action_orderingFragment_to_paymentFragment"
            app:destination="@id/paymentFragment"
            />
        <action
            android:id="@+id/action_orderingFragment_to_orderListFragment"
            app:destination="@id/orderListFragment"
            app:popUpTo="@id/cartFragment"
            app:popUpToInclusive="true"
            />
    </fragment>

    <fragment
        android:id="@+id/saveCardFragment"
        android:name="kz.eztech.stylyts.presentation.fragments.card.SaveCardFragment"
        android:label="SaveCardFragment"
        />

    <fragment
        android:id="@+id/cardFragment"
        android:name="kz.eztech.stylyts.presentation.fragments.card.CardFragment"
        android:label="fragment_card"
        tools:layout="@layout/fragment_card"
        >
        <action
            android:id="@+id/action_cardFragment_to_saveCardFragment"
            app:destination="@id/saveCardFragment"
            />
    </fragment>

    <fragment
        android:id="@+id/paymentFragment"
        android:name="kz.eztech.stylyts.presentation.fragments.order_constructor.PaymentFragment"
        android:label="PaymentFragment"
        >
        <action
            android:id="@+id/action_paymentFragment_to_orderDetailFragment"
            app:destination="@id/orderDetailFragment"
            app:popUpTo="@id/cartFragment"
            app:popUpToInclusive="true"
            />
    </fragment>

    <fragment
        android:id="@+id/orderListFragment"
        android:name="kz.eztech.stylyts.presentation.fragments.order.OrderListFragment"
        android:label="OrderListFragment"
        >
        <action
            android:id="@+id/action_orderListFragment_to_orderDetailFragment"
            app:destination="@id/orderDetailFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right"
            />
    </fragment>

    <include app:graph="@navigation/nav_profile" />

    <fragment
        android:id="@+id/postOrderingFragment"
        android:name="kz.eztech.stylyts.presentation.fragments.order_constructor.post.PostOrderingFragment"
        android:label="fragment_post_ordering"
        tools:layout="@layout/fragment_post_ordering"
        >
        <action
            android:id="@+id/action_postOrderingFragment_to_orderingFragment"
            app:destination="@id/orderingFragment"
            />
    </fragment>

    <fragment
        android:id="@+id/pickupPointsFragment"
        android:name="kz.eztech.stylyts.presentation.fragments.order_constructor.self_pickup.PickupPointsFragment"
        android:label="PickupPointsFragment"
        >
        <action
            android:id="@+id/action_pickupPointsFragment_to_orderingFragment"
            app:destination="@id/orderingFragment"
            />
    </fragment>

    <fragment
        android:id="@+id/orderDetailFragment"
        android:name="kz.eztech.stylyts.presentation.fragments.order.UserOrderDetailFragment"
        android:label="OrderDetailFragment"
        >
        <action
            android:id="@+id/action_orderDetailFragment_to_paymentFragment"
            app:destination="@id/paymentFragment"
            />
    </fragment>

    <fragment
        android:id="@+id/clothesDetailFragment"
        android:name="kz.eztech.stylyts.presentation.fragments.clothes.ClothesDetailFragment"
        android:label="fragment_clothes_detail"
        tools:layout="@layout/fragment_clothes_detail"
        >
        <action
            android:id="@+id/action_clothesDetailFragment_to_nav_ordering"
            app:destination="@id/cartFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right"
            />
        <action
            android:id="@+id/action_clothesDetailFragment_to_nav_create_collection"
            app:destination="@id/nav_create_collection"
            />
    </fragment>

    <include app:graph="@navigation/nav_shop_profile" />
</navigation>