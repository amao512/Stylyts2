<?xml version="1.0" encoding="utf-8"?>
<navigation
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_search"
    app:startDestination="@id/shopFragment"
    >
    <fragment
        android:id="@+id/shopFragment"
        android:name="kz.eztech.stylyts.presentation.fragments.shop.ShopFragment"
        android:label="fragment_shop"
        tools:layout="@layout/fragment_shop"
        >
        <action
            android:id="@+id/action_shopFragment_to_shopItemListFragment"
            app:destination="@id/shopItemListFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right"
            />
        <action
            android:id="@+id/action_shopFragment_to_searchFragment"
            app:destination="@id/searchFragment"
            />
        <action
            android:id="@+id/action_shopFragment_to_shopListFragment"
            app:destination="@id/shopListFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right"
            />
        <action
            android:id="@+id/action_shopFragment_to_nav_ordering"
            app:destination="@id/nav_ordering"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right"
            />
    </fragment>

    <fragment
        android:id="@+id/shopItemListFragment"
        android:name="kz.eztech.stylyts.presentation.fragments.shop.ShopCategoryListFragment"
        android:label="fragment_shop_item_list"
        tools:layout="@layout/fragment_shop_item_list"
        >
        <action
            android:id="@+id/action_shopItemListFragment_to_categoryTypeDetailFragment"
            app:destination="@id/shopClothesListFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right"
            />
    </fragment>

    <fragment
        android:id="@+id/shopClothesListFragment"
        android:name="kz.eztech.stylyts.presentation.fragments.shop.ShopClothesListFragment"
        android:label="fragment_category_type_detail"
        tools:layout="@layout/fragment_category_type_detail"
        >
        <action
            android:id="@+id/action_shopClothesListFragment_to_clothesDetailFragment"
            app:destination="@id/clothesDetailFragment"
            />
        <action
            android:id="@+id/action_shopClothesListFragment_to_nav_ordering"
            app:destination="@id/nav_ordering"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right"
            />
    </fragment>

    <fragment
        android:id="@+id/clothesDetailFragment"
        android:name="kz.eztech.stylyts.presentation.fragments.clothes.ClothesDetailFragment"
        android:label="fragment_item_detail"
        tools:layout="@layout/fragment_clothes_detail"
        >
        <action
            android:id="@+id/action_clothesDetailFragment_to_nav_create_collection"
            app:destination="@id/nav_create_collection"
            />
        <action
            android:id="@+id/action_clothesDetailFragment_to_nav_ordering"
            app:destination="@id/nav_ordering"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right"
            />
    </fragment>

    <include app:graph="@navigation/nav_create_collection" />

    <fragment
        android:id="@+id/searchFragment"
        android:name="kz.eztech.stylyts.presentation.fragments.search.SearchFragment"
        android:label="SearchFragment"
        tools:layout="@layout/fragment_search"
        >
        <action
            android:id="@+id/action_searchFragment_to_clothesDetailFragment"
            app:destination="@id/clothesDetailFragment"
            />
        <action
            android:id="@+id/action_clothesDetailFragment_to_nav_ordering"
            app:destination="@id/nav_ordering"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right"
            />
    </fragment>

    <include app:graph="@navigation/nav_profile" />

    <include app:graph="@navigation/nav_shop_profile" />

    <fragment
        android:id="@+id/shopListFragment"
        android:name="kz.eztech.stylyts.presentation.fragments.shop.ShopListFragment"
        android:label="fragment_shop_list"
        tools:layout="@layout/fragment_shop_list"
        />
</navigation>