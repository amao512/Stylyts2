<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="true">
        <shape
            android:dither="true"
            android:shape="rectangle"
            android:useLevel="false"
            android:visible="true"
            >
            <solid android:color="@color/app_blue" />
            <corners android:radius="@dimen/switch_radius" />
            <size
                android:width="@dimen/switch_stroke_width"
                android:height="@dimen/switch_height"
                />
            <stroke
                android:width="@dimen/switch_stroke_width"
                android:color="@color/app_blue"
                />
        </shape>
    </item>
    <item android:state_checked="false">
        <shape
            android:dither="true"
            android:shape="rectangle"
            android:useLevel="false"
            android:visible="true"
            >

            <solid android:color="@color/app_gray" />
            <corners android:radius="@dimen/switch_radius" />
            <size
                android:width="@dimen/switch_stroke_width"
                android:height="@dimen/switch_height"
                />
            <stroke
                android:width="@dimen/switch_stroke_width"
                android:color="@color/app_gray"
                />
        </shape>
    </item>
</selector>