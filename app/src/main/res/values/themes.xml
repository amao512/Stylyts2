<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Stylyts" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="android:fontFamily">@font/sf_pro_regular</item>
        <item name="colorPrimary">@android:color/transparent</item>
        <item name="colorPrimaryVariant">@android:color/transparent</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Text">
        <item name="android:textColor">@color/app_black</item>
    </style>

    <style name="Bold" parent="Text">
        <item name="android:fontFamily">@font/sf_pro_bold</item>
    </style>

    <style name="Thin" parent="Text">
        <item name="android:fontFamily">@font/sf_pro_thin</item>
    </style>

    <style name="WhiteText">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="BigTitleText" parent="Text">
        <item name="android:textSize">26sp</item>
    </style>

    <style name="TitleText" parent="Text">
        <item name="android:textSize">21sp</item>
    </style>

    <style name="SubtitleText" parent="Text">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="TitleTextBold" parent="Bold">
        <item name="android:textSize">21sp</item>
    </style>

    <style name="SubtitleTextBold" parent="Bold">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="TitleTextThin" parent="Thin">
        <item name="android:textSize">21sp</item>
    </style>

    <style name="SubtitleTextThin" parent="Thin">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="TextRegular" parent="Text">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="TextRegularBold" parent="Bold">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="TextRegularThin" parent="Thin">
        <item name="android:textSize">14sp</item>
    </style>


    <style name="BottomNavigationActiveText" parent="TextAppearance.MaterialComponents.Caption">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="BottomNavigationInactiveText" parent="TextAppearance.MaterialComponents.Caption">
        <item name="android:textSize">11sp</item>
    </style>

    <style name="roundedImageView" parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerRadius">@dimen/corner_radius_default</item>
    </style>

    <style name="circleImageView" parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="SearchView" parent="Widget.AppCompat.SearchView">
        <item name="android:textSize">14sp</item>
        <item name="android:background">@drawable/rounded_rectangle_gray</item>
        <item name="queryBackground">@null</item>
        <item name="iconifiedByDefault">false</item>
    </style>


    <style name="BaseBottomSheetDialogCommon" parent="@style/Theme.Design.Light.BottomSheetDialog">
        <item name="android:windowIsFloating">false</item>
        <item name="bottomSheetStyle">@style/CommonBottomSheet</item>
    </style>

    <style name="CommonBottomSheet" parent="@style/Widget.Design.BottomSheet.Modal">
        <item name="android:background">@android:color/transparent</item>
    </style>

    <!--full screen dialog-->
    <style name="FullScreenDialog" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:padding">0dp</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

</resources>